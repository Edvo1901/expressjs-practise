<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create user</a>
    </div>
    <div class="form-add-user">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update a users</legend>
                <div class="input-group d-none">
                    <label>ID:</label>
                    <input type="text" name="userId" value="<%= dataUser.id %>"/>
                </div>
                <div class="input-group">
                    <label>Email:</label>
                    <input type="text" name="email" value="<%= dataUser.email %>"/>
                </div>
                <div class="input-group">
                    <label>Name:</label>
                    <input type="text" name="userName" value="<%= dataUser.name %>"/>
                </div>
                <div class="input-group">
                    <label>City:</label>
                    <input type="text" name="city" value="<%= dataUser.city %>"/>
                </div>
                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>